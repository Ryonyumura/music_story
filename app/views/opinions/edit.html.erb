<% provide :title, '編集' %>

<%= form_for(@opinion,url:comment_opinion_path,method: :patch) do |f| %>
  <div class="form-group">
    <%= f.label :名前 %>
    <%= f.text_field :name, class:'form-control'%>

    <%= f.label :コメント %>
    <%= f.text_field :content, class:'form-control' %>

    <%= f.submit class: "btn btn-large btn-primary" %>
  </div>
<% end %>
<%= link_to "削除する", comment_opinion_path(@opinion),method: :delete, data: {confirm: "本当に削除しますか？"} %>
<%= link_to "戻る", comment_path(@opinion.comment_id) %>
