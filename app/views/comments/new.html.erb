<div class="row">
  <div class="form-control form-control-lg">
    <%= form_for(@comment) do |f| %>

      <div class="form-group">
        <%= f.label :タイトル %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :曲名 %>
        <%= f.text_field :song %>
      </div>
      <div class="form-group">
        <%= f.label :歌手 %>
        <%= f.text_field :singer %>
      </div>
      <div class="form-group">
        <%= f.label :思い出 %>
        <%= f.text_area :story %>
      </div>
      <div class="form-group">
        <%= f.label :いつ %>
        <%= f.text_field :when %>
      </div>
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
