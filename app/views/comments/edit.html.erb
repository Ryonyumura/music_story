<% provide :title, '編集' %>

    <%= form_for(@comment) do |f| %>
      <div class="form-group">
        <%= f.label :タイトル %>
        <%= f.text_field :title, class:'form-control'%>

        <%= f.label :曲名 %>
        <%= f.text_field :song, class:'form-control' %>

        <%= f.label :歌手 %>
        <%= f.text_field :singer, class:'form-control' %>

        <%= f.label :思い出 %>
        <%= f.text_area :story, class:'form-control' %>

        <%= f.label :いつ %>
        <%= f.text_field :when, class:'form-control' %>

        <%= f.submit value="編集する", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
<%= button_to "削除する", comment_path(@comment),method: :delete, data: {confirm: "本当に削除しますか？"} %>
<%= button_to "戻る", static_pages_index_path, method: :get %>
